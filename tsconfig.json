{
    // https://v3.nuxtjs.org/concepts/typescript
    "extends": "./.nuxt/tsconfig.json",
    "exclude": ["node_modules", ".nuxt", "dist", "playground/*", "test"],
    "compilerOptions": {
        "jsx": "preserve",
        "baseUrl": ".",
        "moduleResolution": "Node",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"],
            "~~/*": ["./*"],
            "@@/*": ["./*"]
        }
    }
}
